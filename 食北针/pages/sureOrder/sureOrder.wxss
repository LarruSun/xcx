/* sureOrder.wxss */
page{
  background:#eee;
}
.container{
   padding:0;
   width:100%;
   box-sizing: border-box;
   padding-bottom: 80rpx;
   position: relative;
}
.nameAddr{
  background: #fffaed;
   width:100%;
   display: flex;
   align-items: center;
   justify-content: space-between;
  position: relative;
   box-sizing: border-box;
 padding:20rpx 20rpx;
}
.nameAddr_L{
   display: flex;
   align-items: center;
}
.nameAddr_L image{
   width:36rpx;
   height:56rpx;
   margin-right: 10rpx;
}
.nameAddr_R image{
   width:30rpx;
   height:30rpx;
}
.bname{
   font-size:30rpx;
}
.baddr{
   font-size:24rpx;
   color:#999;
}
.arrivetime{
  display:flex;
  justify-content:space-between;
  background:#f9f9f9;
  box-sizing:border-box;
  padding:10rpx 20rpx;
  align-items:center;
  width:100%;
  font-size:26rpx;
}
.arrivetime_L{
   display: flex;
   align-items: center;  
}
.arrivetime image{
   width:50rpx;
   height:50rpx;
   margin-right:6rpx;
}
.payAndQuan{
  width:100%;
  background: #fff;
  font-size:26rpx;
}
.payAndQuan image{
   width:20rpx;
   height:22rpx;
   margin-left:6rpx;
}
.payMethod,.quan{
   display: flex;
   justify-content: space-between;
   align-items: center;
   border-bottom: 1rpx solid #e5e5e5;
   box-sizing: border-box;
   padding:20rpx;
}
.alic{
   display: flex;
   align-items: center;
}
.alic text{
   color: rgb(153, 153, 153);
}
.quan{
   border:none;
}
.ordBox{
   width:100%;
   margin-top:30rpx;
}
.zbusbtn{
   display: flex;
   justify-content: space-between;
   align-items: center;
   width:100%;
   background: #fff;
   font-size:25rpx;
   font-weight: 600;
   padding:10rpx 20rpx;
   box-sizing: border-box;
   border-bottom: 1rpx solid #e5e5e5;
}
.zbusbtn image{
   width:50rpx;
   height:50rpx;
   margin-right: 10rpx;
}
.zbusbtn_L,.zbusbtn_R,.zbusbtn_R view{
   display: flex;
   align-items: center;
}
.listBox{
   width:100%;
}
.list-item{
   width:100%;
   background: #fefcfc;
   border-bottom: 1rpx dashed rgb(195, 195, 195);
   box-sizing: border-box;
   font-size:26rpx;
}
.list-item-ok{
   display: flex;
   flex-wrap: wrap;
   padding:12rpx 20rpx;
}
.list-item-t{
   width:100%;
   display: flex;
   justify-content: space-between;
   padding:10rpx;
}
.list-item-b{
   padding:10rpx;
}
.list-item-edit{
   padding:0rpx 24rpx;
   display: flex;
   justify-content: space-between;
   box-sizing: border-box;
   align-items: center;
   padding-right:0rpx;
}
.list-item-edit-C{
   display: flex;
   align-items: center;
}
.sub,.add{
   height:100%;
   font-size:55rpx;
   color:rgb(153, 153, 153);
}
.num{
   padding:0rpx 20rpx 0rpx;
   height:100%;
   font-size:36rpx;
}
.list-item-edit-R{
   background: rgb(254, 80, 100);
   color:#fff;
   height:100%;
   display: flex;
   padding:36rpx;
}
.list-item-edit-LB{
  display: flex;
  justify-content: space-between;
}
.list-item-edit-L{
   text-align: center;
}
.list-item-edit-LB text{
  font-size:24rpx;
  border-radius: 20rpx;
  padding:4rpx 12rpx;
  color:red;
  margin-top:10rpx;
  margin-bottom: 10rpx;
}
.ton{
   border:1rpx solid red;
}
.fei{
   width:100%;
   background:#fefcfc;
   box-sizing: border-box;
   padding:10rpx 20rpx;
}
.ffei,.yfei,.sfei{
   display: flex;
   font-size:24rpx;
   justify-content: space-between;
   box-sizing: border-box;
   padding:10rpx ;
}
.otherInfo{
   width:100%;
   font-size:30rpx;
   background: #fff;
   padding:0 20rpx;
   box-sizing: border-box;
   margin-top:30rpx;
}
.yc,.bz,.fp{
   width:100%;
   display: flex;
   justify-content: space-between;
   align-items: center;
   border-bottom: 1rpx solid #e5e5e5;
   height:80rpx;
}
.fp{
   border:none;
}
.bz image,.fp image{
   width:20rpx;
   height:30rpx;
   margin-left:10rpx;
}
.eatnum{
   display: flex;
   align-items: center;
}
.acen{
   display: flex;
   align-items: center;
   max-width: 72%;
   justify-content: flex-end;
}
.acen text{
   max-width: 100%;
   text-overflow:ellipsis;
   white-space:nowrap;
   overflow:hidden;
   word-break:break-all;
}
.bot{
   position: fixed;
   bottom:0;
   left:0;
   right:0;
   display: flex;
   background:#eee;
   height:80rpx;
   justify-content: space-between;
   align-items: center;
}
.botL{
    display:flex;
    justify-content: flex-start;
    margin-left: 22rpx
}
.botL text{
   margin-right: 25rpx
}

.botR{
   background: red;
   color:#fff;
   font-size:36rpx;
   padding:20rpx;
}

