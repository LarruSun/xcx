/* components/component-tag-name.wxss */
.box{
  z-index: 99;
  background: white;
  width: 80%;
  height: 350rpx;
  border-radius: 10rpx;
  display: inline-block;
  position: fixed;
  top:300rpx;
  margin: 0 10%;
  text-align: center;
}
.top{
  width: 100%;
  height: 60rpx;
  border-bottom: 1px solid #dee3eb;
  font-size: 30rpx;
  line-height: 60rpx;
}
.top image{
  width:35rpx;
  height:35rpx;
  position:absolute;
  right:20rpx;
  top: 12rpx;
}
.content{
  height: 200rpx;
  width: 100%;
  border-bottom: 1px solid #dee3eb;
  line-height: 200rpx;
  font-size: 26rpx;
  text-align: center;
}
.bottom{
  font-size: 30rpx;
}
.bottom view{
  width: 160rpx;
  height: 60rpx;
  line-height: 60rpx;
  border-radius: 8rpx;
  display: inline-block;
  margin: 0 10rpx;
  margin-top: 10rpx;
}
.use{
  background: #ffc824;
}
.look{
  background: #fff4d3;
}
.shadow{
  position:fixed;
  left:0;
  right:0;
  top:0;
  bottom:0;
  background:rgba(0, 0, 0, 0.5);
  z-index:9;
}